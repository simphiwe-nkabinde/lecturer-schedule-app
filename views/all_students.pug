extends layout

block content
    include includes/admin_navbar.pug
    include includes/alert.pug
    h1.display-4.text-center.my-5 Student Users
    div#table-container
        table.table.table-bordere
            thead
                tr
                    th(scope='col') ID
                    th(scope='col') Name
                    th(scope='col') email
                    th(scope='col') password
                    th(scope='col') Department
                    th(scope='col') remove
            tbody
                each val in students
                    tr(id=`row-${val.student_id}`)  
                        th(scope='row') #{val.student_id}
                        td #{val.name}
                        td #{val.email}
                        td #{val.password}
                        td 
                            div.text-muted.text-xs #{'('+val.faculty+')'}
                            div #{val.department}
                        td 
                            button.btn.btn-sm.btn-outline-secondary(onclick=`removeUser(${val.student_id}, 'student')`)
                                i.bi.bi-trash-fill(onclick=`removeUser(${val.student_id}, 'student')`)